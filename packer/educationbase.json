{
  "builders": [
    {
      "boot_command": [
        "<tab> text ks=http://{{ .HTTPIP }}:{{ .HTTPPort}}/{{user `ks_file`}}.cfg<enter>"
      ],
      "disk_size": "{{ user `vm_disk_size` }}",
      "disk_type_id": "0",  
      "guest_os_type": "{{ user `guest_os_type` }}",
      "http_directory": "http",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha1",
      "iso_url": "{{ user `iso_url` }}",
      "output_directory": "output/{{ user `vm_type` }}-base-vmware",
      "shutdown_command": "echo 'vagrant'|sudo -S shutdown -P now",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "skip_compaction": "true",
      "ssh_wait_timeout": "10000s",      
      "tools_upload_flavor": "linux",
      "type": "vmware-iso",
      "vm_name": "{{user `vm_type`}}-base",
      "vmx_data": {
        "cpuid.coresPerSocket": "1",
        "memsize": "{{user `vm_memsize`}}",
        "numvcpus": "{{user `vm_cores`}}",
        "rtc.diffFromUTC": "0"
      }
    }
  ],
    "provisioners": [
    {
      "scripts": [
        "scripts/base.sh",
        "scripts/sshd.sh",
        "scripts/pre_build.sh",
        "scripts/vmtools.sh",
        "scripts/cleanup.sh"
      ],
      "type": "shell"
    }
  ],
  "variables": {
    "hostname": "vagrant",
    "arch": "i386",
    "iso_checksum": "f3aa74fd6ddc7b14ed4cf81db8135aee57814791",
    "iso_url": "http://mirrors.kernel.org/centos/6.7/isos/i386/CentOS-6.7-i386-bin-DVD1.iso",
    "ks_file": "ks.cfg",
    "os_name": "CentOS-6.7",
    "guest_os_type": "centos",
    "rubylib": "/usr/src/puppet/lib:/usr/src/facter/lib:/usr/src/hiera/lib",
    "system_user": "vagrant",
    "system_user_password": "vagrant",
    "training_branch": "lvm-2015.3",
    "training_repo": "https://github.com/kjhenner/puppetlabs-training-bootstrap.git",
    "vm_type": "training",
    "vm_memsize": "4096",
    "vm_disk_size": "20480",
    "vm_cores": "2",
    "ptb_version": "2.34"
  }
}
